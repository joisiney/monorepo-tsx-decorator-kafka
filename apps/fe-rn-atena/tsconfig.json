{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./assets/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}