{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "react": [ "./node_modules/@types/react" ]
          }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": [
        "node_modules"
    ]
}