{
  "name": "olympus",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "cd packages/vitest-kairos && yarn test",
    "lint:fix": "yarn workspaces run lint:fix",
    "lint": "yarn workspaces run lint",
    "reset": "yarn workspaces run reset && rm -rf node_modules && rm -rf yarn.lock",
    "build": "yarn workspaces run build",
    "start": "yarn workspaces run start",
    "dev": "yarn workspaces run start:dev",
    "apolo:dev": "yarn workspaces @olympus/be-apolo run start:dev",
    "apolo:docker-up": "yarn workspaces @olympus/be-apolo run docker-up",
    "apolo:docker-down": "yarn workspaces @olympus/be-apolo run docker-down",
    "atena:android": "yarn workspace @olympus/fe-rn-atena run android",
    "atena:ios": "yarn workspace @olympus/fe-rn-atena run ios"
  },
  "engines": {
    "node": ">=v20.9.0"
  },
  "dependencies": {
    "@olympus/domain-ceos": "*",
    "@olympus/fe-rn-atena": "*",
    "@olympus/gateway-eros": "*",
    "@olympus/kafka-persefone": "*",
    "@olympus/lib-hera": "*",
    "reflect-metadata": "^0.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@olympus/lint-zeus": "*",
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "tsx": "^4.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
