{
  "name": "olympus",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "start:prd:apolo": "cd apps/be-apolo && yarn start:prd",
    "start:dev:apolo": "cd apps/be-apolo && yarn start:dev",
    
    "start:dev:atena:android": "cd apps/fe-rn-atena && yarn android",
    "start:dev:atena:ios": "cd apps/fe-rn-atena && yarn ios",
    
    "start:prod": "yarn start:prd:apolo",
    "start:dev": "yarn start:dev:apolo",

    "build:apolo": "cd apps/be-apolo && yarn build",
    "build:ceos": "cd packages/domain-ceos && yarn build",
    "build:hera": "cd packages/lib-hera && yarn build",

    "build": "yarn build:hera & yarn build:apolo & yarn build:ceos",
    
    "lint:apolo": "cd apps/be-apolo && yarn lint",
    "lint:atena": "cd apps/fe-rn-atena && yarn lint",
    "lint:ceos": "cd packages/domain-ceos && yarn lint",
    "lint:hera": "cd packages/lib-hera && yarn lint",

    "lint": "yarn lint:apolo && yarn lint:atena && yarn lint:ceos && yarn lint:hera",

    "lint:fix:apolo": "cd apps/be-apolo && yarn lint:fix",
    "lint:fix:atena": "cd apps/fe-rn-atena && yarn lint:fix",
    "lint:fix:ceos": "cd packages/domain-ceos && yarn lint:fix",
    "lint:fix:hera": "cd packages/lib-hera && yarn lint:fix",

    "lint:fix": "yarn lint:fix:apolo && yarn lint:fix:atena && yarn lint:fix:ceos && yarn lint:fix:hera"
  },
  "engines": {
    "node": ">=v20.9.0"
  },
  "dependencies": {
    "@olympus/lib-hera": "*",
    "@olympus/lint-zeus": "*",
    "@olympus/domain-ceos": "*",
    "reflect-metadata": "^0.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@olympus/lint-zeus": "*",
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "tsx": "^4.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  }
}
