{
  "name": "olympus",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "start:dev:apolo": "cd packages/be-apolo && yarn start:dev",
    "start:dev": "npm-run-all --parallel start:dev:apolo",
    "build:apolo": "cd packages/be-apolo && yarn build",
    "build:hera": "cd packages/lib-hera && yarn build",
    "build": "npm-run-all --parallel build:hera build:apolo",
    "start:apolo": "cd packages/be-apolo && yarn start",
    "start": "npm-run-all --parallel start:apolo",
    "lint:apolo": "cd packages/be-apolo && yarn lint",
    "lint": "npm-run-all --parallel lint:apolo",
    "lint:fix:apolo": "cd packages/be-apolo && yarn lint:fix",
    "lint:fix:hera": "cd packages/lib-hera && yarn lint:fix",
    "lint:fix": "npm-run-all --parallel lint:fix:apolo lint:fix:hera"
  },
  "engines": {
    "node": ">=v20.9.0"
  },
  "dependencies": {
    "@olympus/lib-hera": "*",
    "@olympus/lint-zeus": "*",
    "reflect-metadata": "^0.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@olympus/lint-zeus": "*",
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "tsx": "^4.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
