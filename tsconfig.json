{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "resolveJsonModule": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "composite": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "exclude": ["node_modules"]
}